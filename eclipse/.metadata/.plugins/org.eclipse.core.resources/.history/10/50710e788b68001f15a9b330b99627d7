package Basil.module.hardcore;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;

import org.lwjgl.input.Keyboard;

import Basil.Client;
import Basil.module.*;
import Basil.module.Module;
import Basil.utils.Invoker;
import de.Hero.settings.Setting;
import net.minecraft.client.Minecraft;
import net.minecraft.client.entity.EntityPlayerSP;
import net.minecraft.entity.Entity;
import net.minecraft.entity.EntityLivingBase;
import net.minecraft.network.play.client.*;

public class HCReach extends Module{
	
	Map<String, Double> diffs = new HashMap<>();
	static double currentReach = 1.0d;
	ArrayList<Setting> settings = Client.sm.getSettingsByMod(this);
	
	public HCReach() {
		super("|HC| Reach", -1, Category.HARDCORE);
	}
	
	public void setup() {
		diffs = new HashMap<>();
		diffs.put("EASY", 0.95);
		diffs.put("EASY", 0.9);
		diffs.put("HARD", 0.85);
		diffs.put("EXTREME", 0.75);
		ArrayList<String> diffs2 = new ArrayList<>();
		diffs2.add("EASY");
		diffs2.add("MEDIUM");
		diffs2.add("HARD");
		diffs2.add("EXTREME");
		Client.sm.rSetting(new Setting("Difficulty", this, "EASY", diffs2));
		currentReach = diffs.getOrDefault(Client.sm.getSettingsByMod(this).get(0).getValString().toUpperCase(), 2.85);
	}
	
	public void onUpdate() {
		settings = Client.sm.getSettingsByMod(this);
		if (isToggled()) {
			currentReach = diffs.getOrDefault(Client.sm.getSettingsByMod(this).get(0).getValString().toUpperCase(), 2.85);
		}
	}
	
	public void onDisable() {
		currentReach = 1.0d;
	}
	
	public static double getReach() {
		return currentReach;
	}
}
